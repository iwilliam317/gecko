<!DOCTYPE html>
<html>
  <head>
    <title>Gecko</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'bootstrap.min','bootstrap-theme.min', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' , 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <nav class="navbar navbar-default navbar-static-top" role="navigation">
           
            
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

             
              <ul class="nav navbar-nav navbar-right">
               
                <li class="dropdown">
                   <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown<strong class="caret"></strong></a>
                  <ul class="dropdown-menu">
                    <% if user_signed_in? %>                      
                      <li class=""><%= link_to (t "sign out"), destroy_user_session_path, method: :delete %></li>
                    <% else %>
                      <li><%= link_to (t "sign in"), user_session_path  %></li>
                      <li><%= link_to (t "sign up"),  new_user_session_path%></li>

                    <% end %>
                  </ul>
                </li>
              </ul>
            </div>
            
          </nav>
  	
    
          <div class="row">
            <div class="col-md-12">
              <%= yield %>
            </div>
           
          </div>
          <div class="row">
            <div class="col-md-12">
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= javascript_include_tag 'bootstrap.min.js', 'jquery.min.js' %>
  </body>
</html>
