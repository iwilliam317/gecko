<p id="notice"><%= notice %></p>

<h1><%= t "reptiles.new.title"%></h1>
<br/>

<div class="col-md-12">
  <div id="messages"></div>
  <%= form_for reptiles_path , method: :get do |form|%>
    <div class="form-group col-md-2">
      <%= text_field_tag 'search', "", :class=> "form-control" %>
    </div>
    
    <div class="form-group">
      <%= submit_tag  t("search"), class: "btn btn-default" %>
    </div>
  <% end %>  
</div>
<br/>
<div class="col-md-8">
  <table class="table">
    <thead>
      <tr>
        <th><%= t "name" %></th>
        <th><%= t ('specie')%></th>
        <th><%= t ('birthday')%></th>
        <th><%= t ('gender')%></th>      
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reptiles.each do |reptile| %>
        <tr id="reptile_<%= reptile.id%>">
          <td><%= reptile.name %></td>
          <td><%= reptile.specie %></td>
          <td><%= reptile.birthday %></td>
          <td><%= reptile.gender %></td>        
          <td><%= link_to  (t 'Show' ), reptile %></td>
          <td><%= link_to  (t 'Edit'), edit_reptile_path(reptile)  %></td>
          <td><%= link_to  (t 'Destroy'), reptile, method: :delete, remote:true, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to ( t 'New', :model=> t("Reptile")), new_reptile_path, :class=>"btn btn-success" %>
</div>

